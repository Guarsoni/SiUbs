@model IEnumerable<SiUbs.WebApp.Models.AfericaoGlicemia>

@{
    ViewBag.Title = "Controle de Glicemia ";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Nova Aferição", "Create", new { id=ViewBag.Cliente }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cliente.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataHoraAfericao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Jejum)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cliente.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataHoraAfericao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Valor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Jejum)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }, new { @class = "btn btn-primary" })
            @*@Html.ActionLink("Details", "Details", new { id=item.Id }, new { @class = "btn btn-primary" })*@
            @Html.ActionLink("Remover", "Delete", new { id=item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
