@model IEnumerable<SiUbs.WebApp.Models.ApplicationUser>

@{
    ViewBag.Title = "Users";
}

<h2>Usuários</h2>

<p>
    @Html.ActionLink("Novo Usuário", "Register", "Account", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Remover", "Delete", new { id=item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
